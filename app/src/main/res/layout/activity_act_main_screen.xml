<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.sarahn.waterreminderapp.activities.MainScreen">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbarColor"
        android:elevation="3dp">

        <com.example.sarahn.waterreminderapp.customsViews.FontyCustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Water Reminder"
            android:layout_gravity="left"
            android:textColor="#000"
            android:id="@+id/toolbar_title" />


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginRight="13dp"
            android:src="@drawable/share"
            android:id="@+id/iv"
            android:clickable="true"
            />
    </android.support.v7.widget.Toolbar>

    <com.example.sarahn.waterreminderapp.customsViews.CustomTabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabGravity="fill"
        app:tabMode="fixed"
         />

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
